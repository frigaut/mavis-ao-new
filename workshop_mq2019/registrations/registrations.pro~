pro registrations
file = "MAVIS Science Workshop December 2019 - Registration.csv"
readcol,file,name,aff,F='x,a,a',skipline=1
openw,lun,"tmp.html",/get_lun
printf,lun,FORMAT='(%"Currently, we have %d registered participants, not counting the <a href=\"#remoteparticipants\">remote participants</a>.</p>\n")',n_elements(name)
printf,lun,format='(%s\n","<table class=\"table table-striped table-bordered u-Margin0\">")'
printf,lun,format='("%s\n"," <thead>")'
printf,lun,format='("%s\n","<tr>")'
printf,lun,format='("%s\n","<th>Full Name</th>")'
printf,lun,format='("%s\n","<th>Affiliation</th>")'
printf,lun,format='("%s\n","</tr>")'
printf,lun,format='("%s\n","</thead>")'
printf,lun,format='("%s\n","<tbody>")'

for i = 0,n_elements(name) do printf,lun,format='("<tr><td>%s %s</td><td>%s</td></tr>\n")',(strsplit(name[i],/ex)[0],(strsplit(name[i],/ex)[1],aff(i)
free_lun, lun
spawn,"cat participants_head.html tmp.html participants_foot.html > ../participants.html"
file_delete,"tmp.html"                                                                         ;
print,format='("%s\n","Updated ../participants.html from %s")',file
