        function initMap() {
            var location, map, marker;

            location = {lat: -33.774522, lng: 151.115686};
            map = new google.maps.Map(document.getElementById('map'), {
                center: location,
                zoom: 16,
                scrollwheel:false
            });
            marker = new google.maps.Marker({
                position: location,
                map: map,
                animation: google.maps.Animation.DROP,
	        label: '9WW, Room 102'
            });
	   var infoWindowOpts = {
	       content: '<a href="https://timetables.mq.edu.au/scientia/web/09WW102.html">9WW Room 102</a><br><a href="https://www.google.com/maps?saddr=My+Location&daddr=9+WW+Macquarie+University">Directions</a>'
           };

           var infoWindow = new google.maps.InfoWindow(infoWindowOpts);
           google.maps.event.addListener(marker, 'click', function() {
	        infoWindow.open(map, marker);
	   });

        }
    </script>

